<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd

  http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd
  http://cxf.apache.org/blueprint/core http://cxf.apache.org/schemas/blueprint/core.xsd">

    <service id="equipmentService" interface="com.daren.equipment.api.biz.IEquipmentBeanService">
        <bean class="com.daren.equipment.core.biz.EquipmentBeanServiceImpl">
            <property name="equipmentBeanDao" ref="equipmentBeanDao"/>
                </bean>
    </service>
    <reference id="equipmentBeanDao" interface="com.daren.equipment.api.dao.IEquipmentBeanDao"/>

    <bean id="equipmentBeanServiceImpl" class="com.daren.equipment.core.biz.EquipmentBeanServiceImpl">
        <property name="equipmentBeanDao" ref="equipmentBeanDao"/>
    </bean>
    <cxf:bus>
        <cxf:features>
            <cxf:logging/>
        </cxf:features>
    </cxf:bus>

    <jaxrs:server id="iEquipmentBeanService" address="/equipment">
        <jaxrs:serviceBeans>
            <ref component-id="equipmentBeanServiceImpl"/>
        </jaxrs:serviceBeans>
    </jaxrs:server>
</blueprint>

