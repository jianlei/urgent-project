<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>com.daren.resources</groupId>
        <artifactId>modules.urgent.resources</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.daren.resources</groupId>
    <artifactId>com.daren.resources.core</artifactId>
    <version>1.0-SNAPSHOT</version>

    <properties>
        <bundle.symbolicName>com.daren.resources.core</bundle.symbolicName>
        <bundle.namespace>${bundle.symbolicName}</bundle.namespace>
    </properties>

    <name>Urgent :: Resources - Core</name>
    <description>Urgent Resources Core Module</description>

    <packaging>bundle</packaging>

    <dependencies>
        <dependency>
            <groupId>com.daren.resources</groupId>
            <artifactId>com.daren.resources.api</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.daren.resources</groupId>
            <artifactId>com.daren.resources.persist.openjpa</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.daren.resources</groupId>
            <artifactId>com.daren.resources.entities</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.daren.core</groupId>
            <artifactId>com.daren.core.api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.daren.core</groupId>
            <artifactId>com.daren.core.impl</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.openjpa</groupId>
            <artifactId>openjpa</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.aries.blueprint</groupId>
            <artifactId>org.apache.aries.blueprint.annotation.api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.servicemix.bundles</groupId>
            <artifactId>org.apache.servicemix.bundles.lightcouch</artifactId>
            <version>0.0.6_1</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>deploy</id>
                        <phase>install</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <copy file="target/${project.artifactId}-${project.version}.jar"
                                      todir="${karaf.path}"/>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>