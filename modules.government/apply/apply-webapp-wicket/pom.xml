<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.daren.apply</groupId>
        <artifactId>modules.apply</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <groupId>com.daren.apply</groupId>
    <artifactId>com.daren.apply.webapp.wicket</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>Government :: Apply - Wicket Web Application</name>
    <description>Apply - Webapp Wicket</description>
    <packaging>bundle</packaging>

    <properties>
        <bundle.symbolicName>com.daren.apply.webapp.wicket</bundle.symbolicName>
        <bundle.namespace>${bundle.symbolicName}</bundle.namespace>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <!--workflow start -->
        <dependency>
            <groupId>org.activiti</groupId>
            <artifactId>activiti-engine</artifactId>
        </dependency>
        <dependency>
            <groupId>com.daren.chemistry.manage</groupId>
            <artifactId>com.daren.chemistry.manage.webapp.wicket</artifactId>
        </dependency>
        <dependency>
            <groupId>com.daren.competency</groupId>
            <artifactId>com.daren.competency.webapp.wicket</artifactId>
        </dependency>
        <dependency>
            <groupId>com.daren.operations</groupId>
            <artifactId>com.daren.operations.webapp.wicket</artifactId>
        </dependency>
        <dependency>
            <groupId>com.daren.production</groupId>
            <artifactId>com.daren.production.webapp.wicket</artifactId>
        </dependency>
        <!--workflow end -->

        <!--workflow buss-->

        <dependency>
            <groupId>com.daren.fireworks</groupId>
            <artifactId>com.daren.fireworks.webapp.wicket</artifactId>
        </dependency>
        <!--workflow buss-->

        <!--wicket start-->
        <dependency>
            <groupId>org.apache.wicket</groupId>
            <artifactId>wicket-core</artifactId>
        </dependency>
        <!--wicket end-->

        <!--core end-->
        <dependency>
            <groupId>com.daren.core</groupId>
            <artifactId>com.daren.core.web.component</artifactId>
        </dependency>

        <dependency>
            <groupId>com.daren.core</groupId>
            <artifactId>com.daren.core.web.wicket</artifactId>
        </dependency>
        <!--core end-->

        <!--inject end-->

        <dependency>
            <groupId>org.apache.aries.blueprint</groupId>
            <artifactId>org.apache.aries.blueprint.annotation.api</artifactId>
        </dependency>

        <dependency>
            <groupId>org.apache.geronimo.specs</groupId>
            <artifactId>geronimo-atinject_1.0_spec</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.servicemix.bundles</groupId>
            <artifactId>org.apache.servicemix.bundles.velocity</artifactId>
        </dependency>

        <dependency>
            <groupId>com.googlecode.wicket-jquery-ui</groupId>
            <artifactId>wicket-jquery-ui-core</artifactId>
        </dependency>

        <dependency>
            <groupId>com.googlecode.wicket-jquery-ui</groupId>
            <artifactId>wicket-kendo-ui</artifactId>
        </dependency>

        <dependency>
            <groupId>com.googlecode.wicket-jquery-ui</groupId>
            <artifactId>wicket-jquery-ui</artifactId>
        </dependency>

        <dependency>
            <groupId>org.apache.openjpa</groupId>
            <artifactId>openjpa</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.apache.servicemix.specs</groupId>
            <artifactId>org.apache.servicemix.specs.jsr303-api-1.0.0</artifactId>
        </dependency>

        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
        </dependency>
        <!--inject end-->

        <dependency>
            <groupId>org.ops4j.pax.wicket</groupId>
            <artifactId>org.ops4j.pax.wicket.service</artifactId>
        </dependency>


    </dependencies>
    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>deploy</id>
                        <phase>install</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <copy file="target/${project.artifactId}-${project.version}.jar"
                                      todir="${karaf.path}"/>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
